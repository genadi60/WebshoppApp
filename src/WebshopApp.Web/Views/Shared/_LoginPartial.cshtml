@using Microsoft.AspNetCore.Identity
@using WebshopApp.Models

@inject SignInManager<WebShopUser> SignInManager
@inject UserManager<WebShopUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
        <li><a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a></li>
        <li>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
                <button  type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
   
}
else
{
    
        <li><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
   
}