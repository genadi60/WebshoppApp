@model WebshopApp.Services.Models.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="User.UserName">Username</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Product.Name">Product name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.Identity.Name.Equals(Model.User.UserName))
    {
        <a asp-action="Delete" asp-controller="Comment" asp-route-id="@Model.Id">Delete</a> <span>|</span>
        <a asp-action="Edit" asp-controller="Comment" asp-route-id="@Model.Id">Edit</a> <span>|</span>
    }
    <a asp-action="Index" asp-controller="Home">Home</a>
</div>